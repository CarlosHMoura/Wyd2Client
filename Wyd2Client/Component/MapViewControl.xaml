<UserControl x:Class="Wyd2.Client.Component.MapViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wyd2.Client.Component"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid
        Height="Auto"
        Width="Auto">
        <Slider x:Name="Zoom" 
                DockPanel.Dock="Left" 
                Value="0" 
                Minimum="0.1" 
                Maximum="5" 
                Width="25" 
                Orientation="Vertical" />
        <ScrollViewer 
            Name="scrollViewer"
            HorizontalScrollBarVisibility="Hidden" 
            VerticalScrollBarVisibility="Hidden">
            <Image Source="/Res/HeightMap.jpg" 
                   Stretch="Uniform">
                <Image.LayoutTransform>
                    <ScaleTransform 
                        ScaleX="{Binding ElementName=Zoom,Path=Value}" 
                        ScaleY="{Binding ElementName=Zoom,Path=Value}"/>
                </Image.LayoutTransform>
            </Image>
        </ScrollViewer>
    </Grid>
</UserControl>
